{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "declaration": true,
    "allowJs": true,
    "emitDeclarationOnly": false,
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/css/*"],
      "@types-data/*": ["src/types/*"],
      "@icon/*": ["src/icon/*"],
      "@mock/*": ["src/mock/*"],
      "@utils/*": ["src/utils/*"],
      "@CustomButton/*": ["src/components/CustomButton/*"]
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}